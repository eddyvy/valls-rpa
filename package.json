{
  "name": "valls-rpa",
  "version": "1.0.1",
  "description": "Aplicaci√≥n RPA de escritorio con TypeScript",
  "main": "dist/main.js",
  "author": "Eduard Valls",
  "scripts": {
    "build:ts": "tsc",
    "watch:ts": "tsc --watch",
    "start": "npm run build:ts && electron .",
    "dev": "tsc && electron . --inspect",
    "build:win": "npm run build:ts && electron-builder --win",
    "build:mac": "npm run build:ts && electron-builder --mac",
    "build:linux": "npm run build:ts && electron-builder --linux",
    "version": "node ./script/version.js",
    "publish": "node ./script/release.js",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "format": "prettier --write \"src/**/*.{ts,html,css,json}\"",
    "format:check": "prettier --check \"src/**/*.{ts,html,css,json}\""
  },
  "build": {
    "appId": "com.valls.rpa",
    "productName": "Valls RPA",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "src/index.html",
      "node_modules/**/*"
    ],
    "publish": [
      {
        "provider": "github",
        "owner": "eddyvy",
        "repo": "valls-rpa"
      }
    ],
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "build/icon.png",
      "sign": null,
      "verifyUpdateCodeSignature": false
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  },
  "dependencies": {
    "electron-log": "^5.4.3",
    "electron-updater": "^6.6.2",
    "playwright": "^1.40.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/electron": "^1.6.10",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^8.46.3",
    "@typescript-eslint/parser": "^8.46.3",
    "dotenv": "^17.2.3",
    "electron": "^27.0.0",
    "electron-builder": "^24.0.0",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "prettier": "^3.6.2",
    "prettier-plugin-organize-imports": "^4.3.0",
    "ts-node": "^10.9.0",
    "typescript": "^5.0.0"
  }
}
