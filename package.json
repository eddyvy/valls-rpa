{
  "name": "valls-rpa",
  "version": "1.0.1",
  "description": "Aplicaci√≥n RPA de escritorio con TypeScript",
  "main": "dist/main.js",
  "author": "Eduard Valls",
  "scripts": {
    "build:main": "tsc --project tsconfig.json",
    "build:renderer": "webpack --mode production --config webpack.config.mjs",
    "build": "npm run build:main && npm run build:renderer",
    "watch:main": "tsc --project tsconfig.json --watch",
    "watch:renderer": "webpack --mode development --watch --config webpack.config.mjs",
    "start": "electron .",
    "dev": "npm run build && electron . --inspect",
    "build:win": "npm run build && electron-builder --win",
    "build:mac": "npm run build && electron-builder --mac",
    "build:linux": "npm run build && electron-builder --linux",
    "version": "node ./script/version.js",
    "publish": "node ./script/release.js",
    "lint": "eslint . --ext .ts,.tsx",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,html,css,json}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,html,css,json}\""
  },
  "build": {
    "appId": "com.valls.rpa",
    "productName": "Valls RPA",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "node_modules/**/*"
    ],
    "publish": [
      {
        "provider": "github",
        "owner": "eddyvy",
        "repo": "valls-rpa"
      }
    ],
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "build/icon.png",
      "sign": null,
      "verifyUpdateCodeSignature": false
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  },
  "dependencies": {
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-label": "^2.1.8",
    "@radix-ui/react-slot": "^1.2.4",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "electron-log": "^5.4.3",
    "electron-updater": "^6.6.2",
    "lucide-react": "^0.553.0",
    "playwright": "^1.40.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "tailwind-merge": "^3.3.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@tailwindcss/postcss": "^4.1.17",
    "@types/electron": "^1.6.10",
    "@types/node": "^20.0.0",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.2",
    "@typescript-eslint/eslint-plugin": "^8.46.3",
    "@typescript-eslint/parser": "^8.46.3",
    "autoprefixer": "^10.4.21",
    "css-loader": "^7.1.2",
    "dotenv": "^17.2.3",
    "electron": "^27.0.0",
    "electron-builder": "^24.0.0",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "html-webpack-plugin": "^5.6.4",
    "postcss": "^8.5.6",
    "postcss-loader": "^8.2.0",
    "prettier": "^3.6.2",
    "prettier-plugin-organize-imports": "^4.3.0",
    "style-loader": "^4.0.0",
    "tailwindcss": "^4.1.17",
    "tailwindcss-animate": "^1.0.7",
    "ts-loader": "^9.5.4",
    "ts-node": "^10.9.0",
    "typescript": "^5.0.0",
    "webpack": "^5.102.1",
    "webpack-cli": "^6.0.1",
    "webpack-dev-server": "^5.2.2"
  }
}
